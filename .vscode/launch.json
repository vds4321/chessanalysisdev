{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Test Basic Functionality",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_basic_functionality.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Quick Analysis Script",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/quick_analysis.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Jupyter Notebook",
            "type": "python",
            "request": "launch",
            "program": "${command:python.interpreterPath}",
            "args": ["-m", "jupyter", "notebook"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        }
    ]
}
